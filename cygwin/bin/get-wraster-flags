#!/bin/sh

WCFLAGS="-I/usr/include "
WLFLAGS="-L/usr/lib "
WLIBS="-lwraster -lXpm -lpng -ljpeg -lgif -ltiff -lX11  -lXext -lm"

usage="Usage: get-wraster-flags [--cflags] [--ldflags] [--libs]"

if test $# -eq 0; then
      echo "${usage}" 1>&2
      exit 1
fi

while test $# -gt 0; do
  case $1 in
    --cflags)
	echo $WCFLAGS
        ;;
    --ldflags|--lflags)
	echo $WLFLAGS
        ;;
    --libs)
	echo $WLIBS
        ;;
    *)
	echo "${usage}" 1>&2
	exit 1
	;;
  esac
  shift
done
