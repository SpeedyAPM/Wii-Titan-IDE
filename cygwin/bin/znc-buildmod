#!/bin/sh

ERROR="[ !! ]"
WARNING="[ ** ]"
OK="[ ok ]"

# Check if we got everything we need

check_binary()
{
	which $1 > /dev/null 2>&1
	if test $? = 1 ; then
		echo "${ERROR} Could not find $1. $2"
		exit 1
	fi
}

if test "x$CXX" = "x" ; then
	CXX="g++"
fi
if test "x$CXX" = "x" ; then
	CXX=g++
fi

check_binary ${CXX} "What happened to your compiler?"

if test -z "$1"; then
	echo "${WARNING} USAGE: $0 <file.cpp> [file.cpp ... ]"
	exit 1
fi

CXXFLAGS=" -ggdb -O2 -pipe -DVERSION_EXTRA=\"+cygwin1\" -fdebug-prefix-map=/cygdrive/c/projects/znc-cygwin/znc-1.6.4-1.i686/build=/usr/src/debug/znc-1.6.4-1 -fdebug-prefix-map=/cygdrive/c/projects/znc-cygwin/znc-1.6.4-1.i686/src/znc-1.6.4=/usr/src/debug/znc-1.6.4-1 -DOPENSSL_NO_COMP=1 -std=c++11 -U__STRICT_ANSI__ -D_FORTIFY_SOURCE=2 -O2 -Wall -W -Wno-unused-parameter -Woverloaded-virtual -Wshadow    -fvisibility=hidden -include znc/zncconfig.h -I/usr/include $CXXFLAGS"
MODLINK="-shared $MODLINK"
VERSION="1.6.4"

# Ugly cygwin stuff :(
LIBZNC="cygznc-1.6.dll"
LIBZNCDIR="${exec_prefix}/bin"
if test "x" = "x$LIBZNC"; then
    LIBZNCFLAGS=""
else
    LIBZNCFLAGS="-L$LIBZNCDIR -lznc"
fi

LIBS="$LIBZNCFLAGS $LIBS"

while test ! -z "$1"
do
	FILE=$1
	shift

	MOD="${FILE%.cpp}"
	MOD="${MOD%.cc}"
	MOD="${MOD##*/}"

	if test ! -f "${FILE}"; then
		echo "${ERROR} Building \"${MOD}\" for ZNC $VERSION... File not found"
		exit 1
	else
		printf "Building \"${MOD}.so\" for ZNC $VERSION... "
		if ${CXX} ${CXXFLAGS} ${INCLUDES} ${LDFLAGS} ${MODLINK} -o "${MOD}.so" "${FILE}" ${LIBS} ; then
			echo "${OK}"
		else
			echo "${ERROR} Error while building \"${MOD}.so\""
			exit 1
		fi
	fi
done

exit 0
