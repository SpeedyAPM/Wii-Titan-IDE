#!/bin/sh

WCFLAGS="-I/usr/include "
WLFLAGS="-L/usr/lib "
WLIBS="-lWINGs -lWUtil -lwraster -lXpm -lpng -ljpeg -lgif -ltiff -lXft -lXrender -lX11 -lxcb -lXau -lXdmcp -lfontconfig -lexpat -lfreetype -lbz2 -lz -lpng16 -lm -lz -lexpat -lfreetype -lbz2 -lz -lpng16 -lm -lz  -lX11  -lXext -lm -lintl"

usage="Usage: get-wings-flags [--cflags] [--ldflags] [--libs]"

if test $# -eq 0; then
      echo "${usage}" 1>&2
      exit 1
fi

while test $# -gt 0; do
  case $1 in
    --cflags)
	echo $WCFLAGS
        ;;
    --ldflags|--lflags)
	echo $WLFLAGS
        ;;
    --libs)
	echo $WLIBS
        ;;
    *)
	echo "${usage}" 1>&2
	exit 1
	;;
  esac
  shift
done
